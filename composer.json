{
    "name":              "roave/strict-php",
    "description":       "A strict runtime type and invariant checker for developing safer PHP applications",
    "type":              "library",
    "license":           "MIT",
    "homepage":          "https://github.com/Roave/StrictPhp",
    "keywords":          [
        "php",
        "strict",
        "type safety",
        "continuous integration",
        "analysis",
        "development"
    ],
    "authors": [
        {
            "name":     "Marco Pivetta",
            "email":    "ocramius@gmail.com",
            "homepage": "http://ocramius.github.io/"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php":                               "~5.6|~7.0",
        "lisachenko/go-aop-php":             "0.6.*",
        "phpdocumentor/reflection-docblock": "~2.0",
        "phpdocumentor/type-resolver":       "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.7"
    },
    "autoload": {
        "psr-4": {
            "StrictPhp\\": "src/StrictPhp"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StrictPhpTest\\":      "tests/StrictPhpTest",
            "StrictPhpTestAsset\\": "tests/StrictPhpTestAsset"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
